<div class="split-container">
    <div>
        <img class="showBigImg" src="<%= item.img %>" alt="<%= item.name %>">
    </div>
    <div>
        <h1><%= item.name %></h1>
        <h2><%= item.description %></h2>
        <% if (item.rarity == 1) { %>
            <h3>Rarity: Common</h3>
        <% } else if(item.rarity == 2) { %>
            <h3>Rarity: Uncommon</h3>
        <% } else if(item.rarity == 3) { %>
            <h3>Rarity: Rare</h3>
        <% } else if(item.rarity == 4) { %>
            <h3>Rarity: Legendary</h3>
        <% } else if(item.rarity == 5) { %>
            <h3>Rarity: Exotic</h3>
        <% } %>
    
        <a href="/items/<%= item._id %>/edit/"><button>Edit <%= item.name %></button></a>
        
        <br>
        <br>
    
        <form action="/items/<%= item._id %>?_method=DELETE" method="POST">
            <button onclick="return confirm('This will PERMANENTLY delete this item from the database! \n Are you sure you want to delete this item?');">DELETE <%= item.name %></button>
        </form>
    </div>
</div>