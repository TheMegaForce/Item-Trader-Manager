<div class="container">
    <form action="/items/<%= item._id %>?_method=PUT" method="post">

        <label for="name" class="label">Name: </label>
        <input type="text" name="name" placeholder="name" value="<%= item.name %>">
        <label for="description" class="label">Description: </label>
        <input type="text" name="description" placeholder="description" value="<%= item.description %>">
        <label for="rarity" class="label">Rarity: </label>
        <input type="text" name="rarity" placeholder="rarity" value="<%= item.rarity %>">
        <label for="img" class="label">Img: </label>
        <input type="text" name="img" placeholder="img" value="<%= item.img %>">


        <input type="submit" value="Update <%= item.name %>" />

    </form>
</div>